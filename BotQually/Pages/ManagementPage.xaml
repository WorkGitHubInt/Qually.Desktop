<Page x:Class="BotQually.ManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:res="clr-namespace:BotQually.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="600"
      Title="ManagementPage">
    <Page.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource MainWhiteText}">

        </Style>
    </Page.Resources>
    <Border Margin="5" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1">
    <Grid VerticalAlignment="Center">
        <TextBlock 
            FontSize="16"
            HorizontalAlignment="Center"
            Text="{Binding Account.Login}"/>
            <TextBlock 
                Margin="0,25,0,0"
                FontSize="14"
                HorizontalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}">
                        <Binding Source="{x:Static res:Resources.ManagmentPageEqu}"/>
                        <Binding Path="Account.Equ" FallbackValue="" StringFormat="0:N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        <Grid Margin="10,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32*"/>
                <ColumnDefinition Width="24*"/>
                <ColumnDefinition Width="26*"/>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="17*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="18*"/>
            </Grid.RowDefinitions>

                <TextBlock VerticalAlignment="Center" Height="16" Margin="0,4,0,5">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageHay}"/>
                            <Binding Path="Account.Hay.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="1" Height="16" Margin="0,5,0,4">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageOat}"/>
                            <Binding Path="Account.Oat.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="2" Height="16" Margin="0,4,0,5">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageWheat}"/>
                            <Binding Path="Account.Wheat.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="3" Height="16" Margin="0,5,0,4">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageShit}"/>
                            <Binding Path="Account.Shit.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="4" Height="16" Margin="0,4,0,5">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageLeather}"/>
                            <Binding Path="Account.Leather.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="5" Height="16" Margin="0,5,0,4">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageApple}"/>
                            <Binding Path="Account.Apple.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="6" Height="16" Margin="0,4,0,5">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageCarrot}"/>
                            <Binding Path="Account.Carrot.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="7" Height="16" Margin="0,5,0,4">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageWood}"/>
                            <Binding Path="Account.Wood.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="8" Height="16" Margin="0,4,0,5">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageSteel}"/>
                            <Binding Path="Account.Steel.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="9" Height="16" Margin="0,5,0,4">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageSand}"/>
                            <Binding Path="Account.Sand.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="10" Height="16" Margin="0,4,0,5">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageStraw}"/>
                            <Binding Path="Account.Straw.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Row="11" Height="16" Margin="0,5,0,4">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Source="{x:Static res:Resources.ManagmentPageFlax}"/>
                            <Binding Path="Account.Flax.Amount" FallbackValue="" StringFormat="0:N0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="{x:Static res:Resources.ManagmentPageHay}" Grid.Column="1" Margin="0,4,5,5" Height="16" Width="39"/>
            <TextBox Text="{Binding Hay}" Grid.Column="2" PreviewTextInput="NumberValidationTextBox"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Hay}" Margin="5,2,5,2" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Hay}" Margin="5,2,5,2" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageOat}" Margin="0,5,5,4" Height="16" Width="30"/>
            <TextBox Text="{Binding Oat}" PreviewTextInput="NumberValidationTextBox" Grid.Row="1" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Oat}" Margin="5,2" Grid.Row="1" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Oat}" Margin="5,2" Grid.Row="1" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageWheat}" Margin="0,4,5,5" Height="16" Width="54"/>
            <TextBox Text="{Binding Wheat}" PreviewTextInput="NumberValidationTextBox" Grid.Row="2" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Wheat}" Margin="5,2" Grid.Row="2" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Wheat}" Margin="5,2" Grid.Row="2" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageShit}" Margin="0,5,5,4" Height="16" Width="36"/>
            <TextBox Text="{Binding Shit}" PreviewTextInput="NumberValidationTextBox" Grid.Row="3" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Shit}" Margin="5,2" Grid.Row="3" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Shit}" Margin="5,2" Grid.Row="3" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageLeather}" Margin="0,4,5,5" Height="16" Width="32"/>
            <TextBox Text="{Binding Leather}" PreviewTextInput="NumberValidationTextBox" Grid.Row="4" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Leather}" Margin="5,2" Grid.Row="4" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Leather}" Margin="5,2" Grid.Row="4" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageApple}" Margin="0,5,5,4" Height="16" Width="43"/>
            <TextBox Text="{Binding Apples}" PreviewTextInput="NumberValidationTextBox" Grid.Row="5" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Apples}" Margin="5,2" Grid.Row="5" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Apples}" Margin="5,2" Grid.Row="5" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageCarrot}" Margin="0,4,5,5" Height="16" Width="53"/>
            <TextBox Text="{Binding Carrot}" PreviewTextInput="NumberValidationTextBox" Grid.Row="6" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Carrot}" Margin="5,2" Grid.Row="6" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Carrot}" Margin="5,2" Grid.Row="6" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="7" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageWood}" Margin="0,5,5,4" Height="16" Width="44"/>
            <TextBox Text="{Binding Wood}" PreviewTextInput="NumberValidationTextBox" Grid.Row="7" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Wood}" Margin="5,2" Grid.Row="7" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Wood}" Margin="5,2" Grid.Row="7" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="8" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageSteel}" Margin="0,4,5,5" Height="16" Width="44"/>
            <TextBox Text="{Binding Steel}" PreviewTextInput="NumberValidationTextBox" Grid.Row="8" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Steel}" Margin="5,2" Grid.Row="8" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Steel}" Margin="5,2" Grid.Row="8" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="9" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageSand}" Margin="0,5,5,4" Height="16" Width="36"/>
            <TextBox Text="{Binding Sand}" PreviewTextInput="NumberValidationTextBox" Grid.Row="9" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Sand}" Margin="5,2" Grid.Row="9" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Sand}" Margin="5,2" Grid.Row="9" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="10" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageStraw}" Margin="0,4,5,5" Height="16" Width="45"/>
            <TextBox Text="{Binding Straw}" PreviewTextInput="NumberValidationTextBox" Grid.Row="10" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Straw}" Margin="5,2" Grid.Row="10" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Straw}" Margin="5,2" Grid.Row="10" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="11" Grid.Column="1" Text="{x:Static res:Resources.ManagmentPageFlax}" Margin="0,5,5,4" Height="16" Width="24"/>
            <TextBox Text="{Binding Flax}" PreviewTextInput="NumberValidationTextBox" Grid.Row="11" Grid.Column="2"/>
                <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Flax}" Margin="5,2" Grid.Row="11" Grid.Column="3" Content="{x:Static res:Resources.ManagmentPageBuyBtn}"/>
                <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Flax}" Margin="5,2" Grid.Row="11" Grid.Column="4" Content="{x:Static res:Resources.ManagmentPageSellBtn}"/>
        </Grid>
            <Button Command="{Binding ReturnCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,5" Height="30" Width="100" Content="{x:Static res:Resources.ManagmentPageReturnBtn}"></Button>
    </Grid>
    </Border>
</Page>
