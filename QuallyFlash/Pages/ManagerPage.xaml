<Page x:Class="QuallyFlash.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuallyFlash"
      xmlns:res="clr-namespace:QuallyFlash.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="ManagerPage">
    <Page.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource MainWhiteText}">

        </Style>
    </Page.Resources>
    <Grid>
        <TextBlock 
            FontSize="16"
            HorizontalAlignment="Center"
            Text="{Binding Account.Login}"/>
        <TextBlock 
            Margin="0,25,0,0"
            FontSize="14"
            HorizontalAlignment="Center">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Экю:">
                    <Binding Source="{x:Static res:Resources.MainPageEquText}"/>
                    <Binding Path="Account.Equ" StringFormat="N0"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <Grid Margin="10,50,10,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Фураж:">
                        <Binding Source="{x:Static res:Resources.ManagerPageHayText}"/>
                        <Binding Path="Account.Hay.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="1">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Овес:">
                        <Binding Source="{x:Static res:Resources.ManagerPageOatText}"/>
                        <Binding Path="Account.Oat.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="2">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Пшеница:">
                        <Binding Source="{x:Static res:Resources.ManagerPageWheatText}"/>
                        <Binding Path="Account.Wheat.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="3">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Навоз:">
                        <Binding Source="{x:Static res:Resources.ManagerPageShitText}"/>
                        <Binding Path="Account.Shit.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="4">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Кожа:">
                        <Binding Source="{x:Static res:Resources.ManagerPageLeatherText}"/>
                        <Binding Path="Account.Leather.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="5">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Яблоки:">
                        <Binding Source="{x:Static res:Resources.ManagerPageApplesText}"/>
                        <Binding Path="Account.Apples.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="6">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Морковь:">
                        <Binding Source="{x:Static res:Resources.ManagerPageCarrotText}"/>
                        <Binding Path="Account.Carrot.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="7">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Дерево:">
                        <Binding Source="{x:Static res:Resources.ManagerPageWoodText}"/>
                        <Binding Path="Account.Wood.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="8">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Железо:">
                        <Binding Source="{x:Static res:Resources.ManagerPageSteelText}"/>
                        <Binding Path="Account.Steel.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="9">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Песок:">
                        <Binding Source="{x:Static res:Resources.ManagerPageSandText}"/>
                        <Binding Path="Account.Sand.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="10">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Солома:">
                        <Binding Source="{x:Static res:Resources.ManagerPageStrawText}"/>
                        <Binding Path="Account.Straw.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="11">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}" FallbackValue="Лен:">
                        <Binding Source="{x:Static res:Resources.ManagerPageFlaxText}"/>
                        <Binding Path="Account.Flax.Amount" StringFormat="N0"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <!--<TextBlock VerticalAlignment="Center" Grid.Row="12" 
                       Text="{Binding Account.Forehead.Amount, StringFormat=Налобники: {0:N0}, FallbackValue=Налобники:}"/>-->

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="{x:Static res:Resources.ManagerPageHayText}" Grid.Column="1" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Hay}" Grid.Column="2" PreviewTextInput="NumberValidationTextBox"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Hay}" Margin="5,2" Grid.Column="3" Content="Купить"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Hay}" Margin="5,2" Grid.Column="4" Content="Продать"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageOatText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Oat}" PreviewTextInput="NumberValidationTextBox" Grid.Row="1" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Oat}" Margin="5,2" Grid.Row="1" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Oat}" Margin="5,2" Grid.Row="1" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageWheatText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Wheat}" PreviewTextInput="NumberValidationTextBox" Grid.Row="2" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Wheat}" Margin="5,2" Grid.Row="2" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Wheat}" Margin="5,2" Grid.Row="2" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageShitText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Shit}" PreviewTextInput="NumberValidationTextBox" Grid.Row="3" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Shit}" Margin="5,2" Grid.Row="3" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Shit}" Margin="5,2" Grid.Row="3" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageLeatherText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Leather}" PreviewTextInput="NumberValidationTextBox" Grid.Row="4" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Leather}" Margin="5,2" Grid.Row="4" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Leather}" Margin="5,2" Grid.Row="4" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageApplesText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Apples}" PreviewTextInput="NumberValidationTextBox" Grid.Row="5" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Apples}" Margin="5,2" Grid.Row="5" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Apples}" Margin="5,2" Grid.Row="5" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageCarrotText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Carrot}" PreviewTextInput="NumberValidationTextBox" Grid.Row="6" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Carrot}" Margin="5,2" Grid.Row="6" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Carrot}" Margin="5,2" Grid.Row="6" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="7" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageWoodText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Wood}" PreviewTextInput="NumberValidationTextBox" Grid.Row="7" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Wood}" Margin="5,2" Grid.Row="7" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Wood}" Margin="5,2" Grid.Row="7" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="8" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageSteelText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Steel}" PreviewTextInput="NumberValidationTextBox" Grid.Row="8" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Steel}" Margin="5,2" Grid.Row="8" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Steel}" Margin="5,2" Grid.Row="8" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="9" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageSandText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Sand}" PreviewTextInput="NumberValidationTextBox" Grid.Row="9" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Sand}" Margin="5,2" Grid.Row="9" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Sand}" Margin="5,2" Grid.Row="9" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="10" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageStrawText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Straw}" PreviewTextInput="NumberValidationTextBox" Grid.Row="10" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Straw}" Margin="5,2" Grid.Row="10" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Straw}" Margin="5,2" Grid.Row="10" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="11" Grid.Column="1" Text="{x:Static res:Resources.ManagerPageFlaxText}" Margin="0,0,5,0"/>
            <TextBox Text="{Binding Flax}" PreviewTextInput="NumberValidationTextBox" Grid.Row="11" Grid.Column="2"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Flax}" Margin="5,2" Grid.Row="11" Grid.Column="3" Content="{x:Static res:Resources.ManagerPageBuyBtn}"/>
            <Button Command="{Binding SellCommand}" CommandParameter="{Binding Account.Flax}" Margin="5,2" Grid.Row="11" Grid.Column="4" Content="{x:Static res:Resources.ManagerPageSellBtn}"/>

            <!--<TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="12" Grid.Column="1" Text="Налобники:" Margin="0,0,5,0"/>
            <Button Command="{Binding BuyCommand}" CommandParameter="{Binding Account.Forehead}" Margin="5,2" Grid.Row="12" Grid.Column="3" Content="Купить"/>-->
        </Grid>
        <Button Command="{Binding BackCommand}" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="30" Width="100" Content="{x:Static res:Resources.ManagerPageReturnBtn}"></Button>
    </Grid>
</Page>
